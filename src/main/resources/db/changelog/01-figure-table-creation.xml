<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog	https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="01-figure-table-creation" author="Piotr">
        <createTable tableName="figure">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="figure_type" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="radius" type="decimal(10,2)"/>
            <column name="length" type="decimal(10,2)"/>
            <column name="width" type="decimal(10,2)"/>
            <column name="side" type="decimal(10,2)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>